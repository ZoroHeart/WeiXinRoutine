/**index.wxss**/
.userinfo {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: start;
  padding-bottom:30rpx;
  border-bottom: 1px solid #f0f0f0;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin:0 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size: 1.1rem;
}

.userMember{
  color: #ec9813;
}
.userMember>cover-image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}

.userMessage{
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  border-bottom: 4px solid #f0f0f0;
}
.userMessage>view{
  width: 33%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.userMessage>view>view{
  width: 100%;
  text-align: center;
}
.userMessage>view>view:last-of-type{
  color: #ec9813;
  font-size: 1.1rem;
}

.myorder{
  width: 100%;
}
.orderTitle{
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}
.orderTitle>view{
  width: 33%;
}
.orderTitle>view:first-of-type{
  margin-left: 30rpx;
}
.orderTitle>view:last-of-type{
  text-align: center;
}
.orderTitle>view>cover-image{
  width: 39rpx;
  height: 46.8rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 12rpx;
}
.orderList{
  width: 100%;
  height: 190rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}
.orderList>view{
  width: 20%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}
.orderList>view>cover-image{
  display: block;
  width: 50%;
}
.orderList>view>text{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 0.9rem;
}

.myListBox{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.myListBox>view{
  width: 33.2%;
  height: 160rpx;
  padding:25rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}
.myListBox>view>cover-image{
  display: block;
  width: 30%;
  height: auto;
}
.myListBox>view>view{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 0.9rem;
}