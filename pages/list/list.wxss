.topSelect{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  padding-bottom: 0.6rem;
}
.inputBox{
  width: 80%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: start;
  align-items: center;
  background: #f7f8fa;
}
.icon-small{
  margin:0 0.5rem;
}
.weui-input{
  width: 83%;
  height: 1.5rem;
  padding: 0.3rem 0;
  font-size: 0.9rem;
}
.closeBtn{
  width: 10%;
  display: flex;
  align-items: center;
  font-size: 0.9rem;
}

.productListBox{
  width: 100%;
  background: #f2f2f2;
}
.productListCont{
  width: 100%;
  height: 6rem;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  background: #fff;
  margin-top: 0.7rem;
}
.productImg{
  width: 30%;
}
.productMessage{
  width: 65%;
  position: relative;
}
.productMessage>view{
  font-size: 0.9rem;
  margin-top: 0.3rem;
}
.productMessage>view:nth-of-type(2){
  color: #969799;
}
.productMessage>view:nth-of-type(3){
  position: absolute;
  bottom: 5%;
  font-size: 1.1rem;
}
.discountsPrice{
  font-size: 0.8rem;
  text-decoration: line-through;
  color: #969799;
}